<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bacgroudasli"
    android:orientation="vertical"
    android:weightSum="10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/bgappbar">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logoo"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="city bus"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:textColor="#000"
            android:text="pesan tiket anda dan tunggu keberangkatannya"
            android:textSize="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:background="@color/bacgroudasli"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:orientation="vertical"
       >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Pesan Tiket"
           android:textSize="25dp"
           android:textAlignment="center"
           android:layout_marginTop="50dp"
           android:textStyle="bold"
           android:textColor="#000"/>
   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lanjutdaftar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:weightSum="10">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/bgcard"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cbus2"
                    android:layout_marginTop="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cbus1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cbus1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="200dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/bgcard"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
               <TextView
                   android:layout_width="250dp"
                   android:layout_gravity="center_horizontal"
                   android:textAlignment="center"
                   android:layout_height="40dp"
                   android:textColor="#000"
                   android:text="Dapatkan potongan 10% untuk bus yang pernah anda tumpangi"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>