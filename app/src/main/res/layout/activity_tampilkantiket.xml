<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pembayaran"
    android:background="@color/bacgroudasli"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@color/bgappbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Tiket"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/bgcard"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="400dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City Bus"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="No penumpang         = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/nopenumpang"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Nama                         = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/namapenumpang"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Dari                             = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/dari"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Tujuan                        = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tujuan"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Jam Berangkat         = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/jamber"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Tanggal Berangkat  = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/tanggalberangkat"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Total Bayar                = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/totalbayar"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="30dp"
                        android:text="Status Pembayaran = "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/statuspembayaran"
                        android:layout_width="200dp"
                        android:layout_marginLeft="135dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </LinearLayout>
            
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button

            android:layout_marginLeft="25dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/bgbutton"
            android:layout_gravity="center"
            android:text="print tiket"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/bgbutton"
            android:layout_gravity="center"
            android:text="save tiket"
            />
    </LinearLayout>


</LinearLayout>