<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pembayaran"
    android:background="@color/bacgroudasli"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@color/bgappbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Konfirmasi Pembayaran"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_height="400dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Total Pembayaran"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Total"
                    android:textAlignment="center"
                    android:textColorHint="#B19F9F"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Metode Pembayaran"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nama Bank"
                    android:textAlignment="center"
                    android:textColorHint="#B19F9F"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Dari Rekening"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textColorHint="#B19F9F"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rekening Tujuan"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textColorHint="#B19F9F"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Keterangan"
                    android:textColor="#000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:textColorHint="#B19F9F"/>
                <Button
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bgbutton"
                    android:text="Simpan"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>