<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:background="#26A69A"
    android:orientation="vertical"
    android:weightSum="10">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pesan tiket anda sekarang"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:textColor="#fff"/>
    </RelativeLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="15dp"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:columnOrderPreserved="false"
        app:rowCount="1">
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_domain_black_24dp"
                    android:layout_marginRight="250dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih asal"
                    android:layout_marginLeft="50dp"

                    android:layout_marginTop="10dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_domain_black_24dp"
                    android:layout_marginRight="250dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih tujuan"
                    android:layout_marginLeft="50dp"

                    android:layout_marginTop="10dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            app:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_margin="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_event_available_black_24dp"
                android:layout_marginRight="250dp"/>
                <Button
                    android:id="@+id/btnpilihtgl"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="10dp"
                    android:text="pilih tanggal"
                    android:background="#26A69A"/>
            <TextView
                android:id="@+id/muncultanggal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="\n silahkan pilih tanggal \n "
                android:textSize="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="5dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="1"
        app:columnOrderPreserved="false">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:orientation="vertical"
            app:layout_gravity="center">
            <ImageView
                android:id="@+id/lanjutdaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:alignmentMode="alignMargins"
        app:columnCount="3"
        app:rowCount="1"
        app:columnOrderPreserved="false">
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp"
            app:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/btnperusahaa"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/bus"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
