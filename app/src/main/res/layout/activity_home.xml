<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:background="@color/bacgroudasli"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@color/bgappbar">
        <TextView
            android:id="@+id/texthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Pesan Tiket Anda Sekarang"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="400dp"
       android:orientation="vertical"
       android:weightSum="10">
       <androidx.cardview.widget.CardView
           android:layout_width="300dp"
           android:layout_height="80dp"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           app:cardBackgroundColor="@color/bgcard">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/asal"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"/>
           <AutoCompleteTextView
               android:id="@+id/pilihasal"
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="60dp"
               android:layout_marginTop="15dp"
               android:hint="pilih asal"
               android:completionThreshold="1"
               android:textColor="#000"
               android:textColorHint="#B19F9F"/>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="300dp"
           android:layout_height="80dp"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           app:cardBackgroundColor="@color/bgcard">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/asal"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"/>
           <AutoCompleteTextView
               android:id="@+id/pilihtujuan"
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="60dp"
               android:layout_marginTop="15dp"
               android:hint="pilih tujuan"
               android:completionThreshold="1"
               android:textColor="#000"
               android:textColorHint="#B19F9F"/>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="200dp"
           android:layout_height="80dp"
           android:layout_gravity="center"
           app:cardBackgroundColor="@color/bgcard"
           android:layout_marginTop="20dp">
           <Button
               android:id="@+id/pilihtanggal"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:background="@color/bgbutton"
               android:text="pilih tanggal"
               android:textColor="#000"
               />
       </androidx.cardview.widget.CardView>
       <TextView
           android:textColor="#000"
           android:textAlignment="center"
           android:id="@+id/muncultanggal"
           android:layout_width="200dp"
           android:layout_height="50dp"
           android:textSize="20dp"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"/>



   </LinearLayout>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:rowCount="1"
        app:columnOrderPreserved="false">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:orientation="vertical"
            app:layout_gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/lanjutdaftar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next"
                />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
