                    android:textColor="#000"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="manggarupi"
                    android:layout_marginLeft="80dp"
                    android:textSize="20dp"
                    android:layout_marginTop="6dp"
