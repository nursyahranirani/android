<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_tiket"
    android:orientation="vertical"
    android:background="@color/bacgroudasli">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@color/bgappbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Ringkasan Pesanan"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:weightSum="10">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/bgcard"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cbus"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Sukaria Bus"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 150.000"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:textColor="#5A5151"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="31 july 2019"
                    android:textSize="25dp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:textColor="#5A5151"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="08.00"
                    android:textSize="15dp"
                    android:layout_marginTop="60dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="220dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <Button
                android:background="@color/bgcard"
                android:id="@+id/btnlanjutbayar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="lanjut bayar"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <Button
                android:background="@color/bgcard"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="ganti bus"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <Button
                android:background="@color/bgcard"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="ubah tanggal"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>